@model IEnumerable<WebApplication1.Models.orders>

@{
    ViewBag.Title = "PedidosPendientes";
    @Styles.Render("~/Content/css")
}

<h2>Listado de pedidos Pendientes de confirmación</h2>

<h2>@ViewBag.mensaje</h2>

<table class="table table-striped">    
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idpedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechapedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombrecia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fono)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idpedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechapedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombrecia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fono)
                </td>
                <td>
                    @Html.ActionLink("Detalle", "Detail", new { id = item.idpedido }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }

    </table>


