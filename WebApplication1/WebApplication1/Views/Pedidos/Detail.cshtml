@model IEnumerable<WebApplication1.Models.orderdetail>

@{
    ViewBag.Title = "Detail";
}

<h2>Pedido @ViewBag.idOrden  - @ViewBag.cliente </h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idproducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombreproducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subtotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idproducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreproducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subtotal)
            </td>
        </tr>
    }

</table>

<p align="right">
    Total:
    <input type="text" value="@ViewBag.total" size="6" disabled />
</p>

<form action="/Pedidos/Update" method="post">
    <input type="hidden" name="idord" value="@ViewBag.idOrden" />
    <p>
        <input type="date" id="start" name="fecha" size="8"
               value="01/12/2019" maxlength="10"
               min="2019-01-01" max="2099-12-31" step="2">

        Confirmado: <input id="confir" name="confirmado" value="true" type="checkbox" />
    </p>

    <p align="center">
        Comentarios: <textarea name="comentarios" rows="10" cols="30"></textarea>
    </p>

    <p align="center">
        <button class="btn btn-primary" type="submit">
            Guardar
        </button>
    </p>
</form>
       





